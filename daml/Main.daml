template PreparedCounterToCounteroffer
    with
        parties : Parties
        property : Property
        escrowAgent : EscrowAgent
        terms : Terms
        sellerAgent : Party
        buyerAgent : Party
        templateType : Text
        isApproved : Bool
    where
        signatory buyerAgent                         

        controller parties.buyer can
            ApproveCounterToCounteroffer: ContractId TenderedCounterToCounteroffer
                do
                    create TenderedCounterToCounteroffer with
                        parties
                        property
                        escrowAgent
                        terms
                        sellerAgent
                        buyerAgent
                        templateType = "OFFER"
                        isApproved = True
                        isCountered = False
                        isRejected = False

template TenderedCounterToCounteroffer
    with
        parties : Parties
        property : Property
        escrowAgent : EscrowAgent
        terms : Terms
        sellerAgent : Party
        buyerAgent : Party
        templateType : Text
        isApproved : Bool
        isCountered : Bool
        isRejected : Bool
    where
        signatory parties.buyer
        observer sellerAgent, buyerAgent
    
        controller parties.seller can
            AcceptCounterToCounteroffer : ContractId ExecutedContract
                with
                    escrowAgentName : Party
                    admin : Party
                do
                    create ExecutedContract with
                        parties
                        property
                        escrowAgent
                        terms
                        sellerAgent
                        buyerAgent
                        escrowAgentName
                        templateType = "CONTRACT"
                        admin

            RejectCounterToCounteroffer : ContractId TenderedCounterToCounteroffer
                do
                    create this with
                        isRejected = True
            
            IndicateCounterToCounterToCounteroffer : ContractId TenderedCounterToCounteroffer
                do
                    create this with
                        isCountered = True
-}

