module Main where
import Daml.Script
import DA.Date

type Thumbnail = Text   -- Base64

data Parties = Parties
    with
        seller : Party
        buyer : Party
    deriving (Eq, Show)

data Property = Property
    with
        streetAddress : Text
        --city : Text
        --state: Text
        --zipCode : Text
        --county : Text
        --taxId : Text
        --legalDescr : Text
        --personalProperty : Text
        --excludedItems : Text
        --thumbnail : Thumbnail
    deriving (Eq, Show)

data EscrowAgent = EscrowAgent
    with
        name : Text
        address : Text
        phone : Text
        email : Text
        fax : Text
    deriving (Eq, Show)
        
data Terms = Terms
    with
        purchasePrice : Decimal
        --initialDeposit : Decimal
        --initialDepositTime : Int
        --balanceToClose : Decimal
        --timeForAcceptance : Date
        --closingDate : Date
        --isAssignable : Text
        --titleEvidenceDeadline : Int
        --whoDesignatesClosingAgent : Text
        --inspectionPeriod : Int
        --additionalTerms : Text
    deriving (Eq, Show)

template SellerAgencyProposal
    with
        party : Party
        agent : Party
        propertyAddress : Text
        templateType : Text
        isApproved : Bool
    where
        signatory agent
        observer party

        controller party can
                AcceptSellerAgency: ContractId SellerAgencyCreated
                    do
                        create SellerAgencyCreated with
                            party
                            agent
                            propertyAddress
                            templateType = "SELLER_AGENCY"
                            isApproved = True

                -- Reject agency proposal
                RejectSellerAgency : ()
                    do return ()

        controller agent can
            WithdrawSellerAgency : ()
                do return ()

template SellerAgencyCreated
    with
        party : Party
        agent : Party
        propertyAddress : Text
        templateType : Text
        isApproved : Bool
    where
        signatory party, agent
    
        controller agent can
            nonconsuming PrepareListing: ContractId PreparedListing
                with
                    property : Property
                    --escrowAgent : EscrowAgent
                    listPrice : Decimal
                do
                    create PreparedListing with
                        seller = party
                        property
                        --escrowAgent
                        listPrice
                        sellerAgent = agent
                        templateType = "LISTING"
                        isApproved = False

template PreparedListing
    with
        seller : Party
        property : Property
        --escrowAgent : EscrowAgent
        listPrice : Decimal
        sellerAgent : Party
        templateType : Text
        isApproved : Bool
    where
        signatory sellerAgent
    
        controller seller can
            ApproveListing: ContractId ApprovedListing
                with
                    admin : Party
                do
                    create ApprovedListing with
                        seller
                        property
                        --escrowAgent
                        listPrice
                        sellerAgent
                        templateType = "LISTING"
                        isApproved = True
                        admin

template ApprovedListing
    with
        seller : Party
        property : Property
        --escrowAgent : EscrowAgent
        listPrice : Decimal
        sellerAgent : Party
        templateType : Text
        isApproved : Bool
        admin : Party
    where
        signatory seller, sellerAgent
        observer admin

template BuyerAgencyProposal
    with
        party : Party
        agent : Party
        propertyAddress: Text
        templateType : Text
        isApproved : Bool
    where
        signatory agent
        observer party

        controller party can
            AcceptBuyerAgency: ContractId BuyerAgencyCreated
                do
                    create BuyerAgencyCreated with
                        party
                        agent
                        propertyAddress = "N/A"
                        templateType = "BUYER_AGENCY"
                        isApproved = True
        
             -- Reject agency proposal
            RejectBuyerAgency : ()
                do return ()

        controller agent can
            WithdrawBuyerAgency : ()
                do return ()

template BuyerAgencyCreated
    with
        party : Party
        agent : Party
        propertyAddress: Text
        templateType : Text
        isApproved : Bool
    where
        signatory party, agent
    
        controller agent can
            nonconsuming PrepareOffer: ContractId PreparedOffer
                with
                    parties : Parties
                    property : Property
                    --escrowAgent : EscrowAgent
                    terms : Terms
                    sellerAgent : Party
                do
                    create PreparedOffer with
                        parties
                        property
                        --escrowAgent
                        terms
                        sellerAgent
                        buyerAgent = agent
                        templateType = "OFFER"
                        isApproved = False

template PreparedOffer
    with
        parties : Parties
        property : Property
        --escrowAgent : EscrowAgent
        terms : Terms
        sellerAgent : Party
        buyerAgent : Party
        templateType : Text
        isApproved : Bool
    where
        signatory buyerAgent

        controller parties.buyer can
            ApproveOffer: ContractId TenderedOffer
                do
                    create TenderedOffer with
                        parties
                        property
                        --escrowAgent
                        terms
                        sellerAgent
                        buyerAgent
                        templateType = "OFFER"
                        isApproved = True
                        isCountered = False
                        isRejected = False

template TenderedOffer
    with
        parties : Parties
        property : Property
        --escrowAgent : EscrowAgent
        terms : Terms
        sellerAgent : Party
        buyerAgent : Party
        templateType : Text
        isApproved : Bool
        isCountered : Bool
        isRejected : Bool
    where
        signatory parties.buyer
        observer sellerAgent, buyerAgent

        controller parties.seller can
            AcceptOffer : ContractId ExecutedContract
                with
                    --escrowAgentName : Party
                    admin : Party
                do
                    create ExecutedContract with
                        parties
                        property
                        --escrowAgent
                        terms
                        sellerAgent
                        buyerAgent
                        --escrowAgentName
                        templateType = "CONTRACT"
                        admin

            RejectOffer : ContractId TenderedOffer
                do
                    create this with
                        isRejected = True
            
            IndicateCounteroffer : ContractId TenderedOffer
                do
                    create this with
                        isCountered = True
            
            ArchiveTenderedOffer : ()
                do return ()

template ExecutedContract
    with
        parties : Parties
        property : Property
        --escrowAgent : EscrowAgent
        terms : Terms
        sellerAgent : Party
        buyerAgent : Party
        --escrowAgentName : Party
        templateType : Text
        admin : Party
    where
        signatory parties.seller, parties.buyer
        observer sellerAgent, buyerAgent, admin--, escrowAgentName

template PreparedCounteroffer
    with
        parties : Parties
        property : Property
        --escrowAgent : EscrowAgent
        terms : Terms
        sellerAgent : Party
        buyerAgent : Party
        templateType : Text
        isApproved : Bool
    where
        signatory sellerAgent

        controller parties.seller can
                ApproveCounteroffer : ContractId TenderedCounteroffer
                    do
                        create TenderedCounteroffer with
                            parties
                            property
                            --escrowAgent
                            terms
                            sellerAgent
                            buyerAgent
                            templateType = "COUNTEROFFER"
                            isApproved = True
                            isCountered = False
                            isRejected = False

template TenderedCounteroffer
    with
        parties : Parties
        property : Property
        --escrowAgent : EscrowAgent
        terms : Terms
        sellerAgent : Party
        buyerAgent : Party
        templateType : Text
        isApproved : Bool
        isCountered : Bool
        isRejected : Bool
    where
        signatory parties.seller
        observer buyerAgent

        controller parties.buyer can
                AcceptCounteroffer : ContractId ExecutedContract
                    with
                        --escrowAgentName : Party
                        admin : Party
                    do
                        create ExecutedContract with
                            parties
                            property
                            --escrowAgent
                            terms
                            sellerAgent
                            buyerAgent
                            --escrowAgentName
                            templateType = "CONTRACT"
                            admin

                RejectCounteroffer : ContractId TenderedCounteroffer
                    do
                        create this with
                            isRejected = True
                            templateType = "COUNTEROFFER"

                IndicateCounterToCounteroffer : ContractId TenderedCounteroffer
                    do
                        create this with
                            isCountered = True
                            templateType = "COUNTEROFFER"

                ArchiveTenderedCounteroffer : ()
                    do return ()
